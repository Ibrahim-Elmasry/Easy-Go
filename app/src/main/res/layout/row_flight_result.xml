<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    >
    <RelativeLayout
        android:id="@+id/row_flight_onclick"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        >
        <ImageView
            android:id="@+id/row_flight_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/row_flight_title"
            android:layout_toEndOf="@id/row_flight_img"
            android:layout_toStartOf="@id/row_flight_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Egypt Air"
            android:textColor="#0C2D85"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/row_flight_duration"
            android:layout_toEndOf="@id/row_flight_img"
            android:layout_toStartOf="@id/row_flight_price"
            android:layout_below="@id/row_flight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="2:00 - 5:00"
            />

        <TextView
            android:id="@+id/row_flight_price"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="bottom|end"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:padding="10dp"
            android:text="5000$"
            android:layout_marginEnd="5dp"
            />




    </RelativeLayout>


</android.support.v7.widget.CardView>